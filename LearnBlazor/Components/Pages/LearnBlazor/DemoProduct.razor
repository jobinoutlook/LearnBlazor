@page "/LearnBlazor/DemoProduct"



<h2 class="text-primary">Demo Product</h2>
<div class="p-2 mt-2">
    <div class="row">
        @foreach(var prod in ProductList)
        {
            <div class="col-6 border bg-light">
                <h4 class="text-secondary">Product - @prod.Id</h4>
                Name - @prod.Name <br/>
                Show Properties : <input type="checkbox" @bind=@prod.IsActive  />
                @if(prod.IsActive)
                {
                    @foreach(var prodProp in prod.ProductProperties)
                    {
                        <p>@prodProp.Key - @prodProp.Value</p>
                    }
                }
                <br />
                <input type="button" class="btn bg-danger" value="Delete" @onclick="()=>RemoveFromProductList(prod.Id)"/>
            </div>
        }
    </div>
    <div class="row pt-4">
        <div>
            Counter : @Count <br />
            <input type="button" class="btn btn-success" style="width:100px;" value="Counter" @onclick="()=>IncrementCount(5)" />
        </div>

    </div>
</div>

@code {
    int Count { get; set; } = 0;

    private void IncrementCount(int counter)
    {
        Count+=counter;
    }

    List<Product> ProductList = new();

    private void RemoveFromProductList(int id)
    {
        var objProduct = ProductList.FirstOrDefault(p => p.Id == id);
        if (objProduct != null) ProductList.Remove(objProduct);

    }

    protected override void OnInitialized()
    {
        ProductList.Add(new()
        {
            Id = 1,
            Name = "Midnight Blaze",
            IsActive = false,
            Price = 5.99,
            ProductProperties = new List<Product_Prop>()
                {
                    new Product_Prop { Id = 1, Key = "Flavor", Value = "Rose"},
                    new Product_Prop { Id = 2, Key = "Size", Value = "20oz"},
                    new Product_Prop { Id = 3, Key = "Color", Value="Purple" }
                }
        });

        ProductList.Add(new()
        {
            Id = 2,
            Name = "Blossom Lily",
            IsActive = true,
            Price = 10.59,
            ProductProperties = new List<Product_Prop>()
                {
                    new Product_Prop { Id = 1, Key = "Flavor", Value = "Lily" },
                    new Product_Prop { Id = 2, Key = "Size", Value = "18oz" },
                    new Product_Prop {Id = 3,Key = "Color",Value = "White"}
                }
        });
    }
}

