@page "/blazorjs"
@inject IJSRuntime _JSRuntime
<h3>Blazor JS</h3>

<div class="row">
    <button class="btn btn-secondary" style="width:auto" @onclick="TestConfirmBox">Test Confirm Button</button> <br />
</div>

<div class="row mt-1">
   
    @if(ConfirmResult)
    {
        
        <p>Confirmation has been made</p>
    }
    else
    {
        
        <p>Pending Confirmation</p>
    }
</div>

@code {
    private string ConfirmMesssage = "Are you sure want to click here?";
    bool ConfirmResult{ get; set; }
    private async Task TestConfirmBox()
    {
        ConfirmResult = await _JSRuntime.InvokeAsync<bool>("confirm", ConfirmMesssage);
    }
}
